@model NautralShop.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chi tiết thông tin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: Arial, Helvetica, sans-serif
    }

    .container_content {
        background-color: #fff;
        width: 100%;
        margin: auto;
        padding: 20px;
        border-radius: 5px;
    }

    .container_form {
        width: 80%;
        margin: auto;
        display: flex;
        justify-content: center;
    }

    .header_EditCate p {
        color: #b66dff;
    }

    .container_bodyEdit {
        display: flex;
        justify-content: center;
    }

    .form-group .form-control[readonly] {
        background-color: #fff
    }
</style>
<div class="container_content">
    <div class="text-center header_EditCate"><p class="fw-bold fs-4">Chi tiết thông tin khách hàng</p></div>
    <hr />
    <div class="container_bodyEdit">
        <div class="col-md-4">
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="control-label">Tên khách hàng</label>
                            <input asp-for="CustomerName" class="form-control" readonly />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="control-label">Mã khách hàng</label>
                            <input asp-for="CustomerId" class="form-control" readonly />
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="control-label">Địa chỉ</label>
                            <input asp-for="CustomerAddress" class="form-control" readonly />
                        <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input asp-for="CustomerEmail" class="form-control" readonly />
                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="control-label">Số điện thoại</label>
                            <input asp-for="CustomerPhone" type="tel" class="form-control" readonly />
                        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="col-sm">
                        <div class="form-group">
                            <label class="control-label">Tên tài khoản</label>
                            <input asp-for="CustomerUsername" type="text" class="form-control" readonly />
                        <span asp-validation-for="CustomerUsername" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="control-label">Điểm tích lũy</label>
                            <input asp-for="CustomerPoint" type="text" class="form-control" readonly />
                            <span asp-validation-for="CustomerPoint" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="control-label">Trạng thái</label>
                        @{
                            var status = Model.CustomerStatus;
                            var statusCus = (status) ? "Đang hoạt động" : "Ngừng hoạt động";
                        }
                            <input value="@statusCus" type="text" class="form-control" readonly />
                            <span asp-validation-for="CustomerStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="customers" asp-area="admin">Trở lại</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
